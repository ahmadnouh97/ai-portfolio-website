{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "level": { "type": "number", "minimum": 1, "maximum": 5 },
          "category": { "enum": ["technical", "soft", "language"] }
        },
        "required": ["name", "level", "category"]
      }
    },
    "technologies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "category": { "enum": ["language", "framework", "tool", "platform"] },
          "proficiency": { "type": "number", "minimum": 1, "maximum": 5 },
          "icon": { "type": "string" }
        },
        "required": ["name", "category", "proficiency", "icon"]
      }
    }
  },
  "required": ["skills", "technologies"]
}