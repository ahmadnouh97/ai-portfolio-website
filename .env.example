# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Settings
# Using console backend for server-side logging, EmailJS handles actual email sending
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@yourportfolio.com

# EmailJS Settings (Required for contact form to send real emails)
# Get these from https://www.emailjs.com/ after setting up your account
EMAILJS_PUBLIC_KEY=your-emailjs-public-key-here
EMAILJS_SERVICE_ID=your-emailjs-service-id-here
EMAILJS_TEMPLATE_ID=your-emailjs-template-id-here
EMAILJS_TO_EMAIL=your-email@gmail.com

# Database (SQLite is used by default)
# For production, you might want to use PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/portfolio_db