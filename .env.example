# Environment Variables for Docker Compose
# Copy this file to .env and update with your values

# Django Core Settings
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# EmailJS Configuration (for contact form)
# Get these from https://www.emailjs.com/
EMAILJS_PUBLIC_KEY=your-emailjs-public-key
EMAILJS_SERVICE_ID=your-emailjs-service-id
EMAILJS_TEMPLATE_ID=your-emailjs-template-id
EMAILJS_TO_EMAIL=your-email@domain.com

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=change-this-secure-password

# Email Backend (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Development Secret Key (only for dev environment)
DEV_SECRET_KEY=dev-secret-key-not-for-production